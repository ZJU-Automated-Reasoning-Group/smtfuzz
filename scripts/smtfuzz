#!/usr/bin/env python3
"""
SMTFuzz Legacy Command-Line Interface

This script provides the original SMTFuzz formula generation functionality.
For advanced fuzzing modes (seed-based and generation-based), use smtfuzz-runner.
"""

import sys
import os

# Add the parent directory to the path so we can import smtfuzz
sys.path.insert(0, os.path.join(os.path.dirname(__file__), '..'))


def main():
    # Run legacy SMTFuzz directly
    from smtfuzz.smtfuzz import main as legacy_main
    legacy_main()


if __name__ == "__main__":
    main() 